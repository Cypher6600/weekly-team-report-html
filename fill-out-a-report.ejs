            <div class="morales morale_smile morale_great">
                <input type="radio" name="workload" id="workload-great" required />
                <label class="btn radio-button d-inline-flex flex-column align-items-center bg-white" for="workload-great">
                    <img alt="Great" />
                    Great
                </label>
            </div>
        </div>
        <div class="form-group shadow-textarea my-5 mx-xl-5" id="commentworkload"></div>

        <div class="form-group shadow-textarea mb-5 mx-xl-5">
            <label for="FormHigh" class="mb-5 pb-0"><h2 class="mb-3">What was your high this week?</h2></label>
            <textarea class="form-control z-depth-1" id="FormHigh" rows="6" placeholder="What was your personal or professional high this week? What's the one thing you accomplished at work this week?" maxlength="600" required></textarea>
        </div>
        <div class="form-group shadow-textarea mb-5 mx-xl-5">
            <label for="FormLow" class="mb-5 pb-0"><h2 class="mb-3">What was your low this week?</h2></label>
            <textarea class="form-control z-depth-1" id="FormLow" rows="6" placeholder="What was your personal or professional low this week?" maxlength="600" required></textarea>
        </div>

        <div class="form-group shadow-textarea mb-5 mx-xl-5">
            <label for="FormElse" class="mb-5 pb-0"><h2 class="mb-3">Anything else?</h2></label>
            <textarea class="form-control z-depth-1" id="FormElse" rows="6" placeholder="Is there anything else you would like to share with your leader? *Optional" maxlength="400" required></textarea>
        </div>

        <div class="mb-5">
            <h2 class="w-50 d-inline-block">Date range</h2>
            <p>
                <label for="inputdate" class="w-50 d-inline-block mx-xl-5">Choose date</label>
                <br />
                <input type="text" name="daterange" value="10/28/2021 - 11/04/2021" class="w-50 d-inline-block" id="inputdate" />
            </p>
        </div>

        <h6 class="text-danger">All fields are required unless marked as optional</h6>
        <p><input class="btn btn-secondary btn-lg btn-block w-50 d-inline-block" type="submit" value="Send weekly report" /></p>
    </form>
